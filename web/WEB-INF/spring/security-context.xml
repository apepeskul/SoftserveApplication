<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:context="http://www.springframework.org/schema/context"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http use-expressions="true">
        <intercept-url pattern="/delete/**" access="hasRole('Admin')"/>
        <intercept-url pattern="/add/**" access="hasRole('Admin')"/>
        <intercept-url pattern="/edit/**" access="hasRole('Admin')"/>
        <intercept-url pattern="/users/**" access="hasRole('Admin')"/>
        <intercept-url pattern="/rest/**" access="hasRole('Merchandiser')"/>

        <!--You'll change isAuthenticated() to permitAll if you fed to login every time-->
        <intercept-url pattern="/login" access="permitAll"/>
        <intercept-url pattern="/**" access="isAuthenticated()"/>

        <form-login login-page="/login"
                    default-target-url="/"
                    authentication-failure-url="/login"/>
        <logout logout-url="/logout"
                logout-success-url="/login"  />

        <access-denied-handler ref="customAccessDeniedHandler"/>
    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="customAuthenticationProvider"/>
    <authentication-provider>
        <user-service>
            <user name="admin" password="admin" authorities="Admin" />
        </user-service>
    </authentication-provider>
    </authentication-manager>

    <beans:bean id="customAuthenticationProvider"
                class="com.springapp.mvc.security.CustomAuthenticationProvider">
    </beans:bean>

    <beans:bean id="customAccessDeniedHandler"
                class="com.springapp.mvc.security.CustomAccessDeniedHandler">
    </beans:bean>

</beans:beans>